<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" type="text/css" href="/css/default.css">
  </head>
  <body>
    <div class="topblue">
      <% if flash[:notice] %>
        <div class="flash notice">
          <%= flash[:notice] %>
        </div>
      <% end %>
      <% if flash[:alert] %>
        <div class="flash alert">
          <%= flash[:alert] %>
        </div>
      <% end %>
      <% unless @current_user %>
        <a href="/signin"><button type="button" name="button">Sign In</button></a>
      </div>
      <% else %>
        <form class="signinform">
        <label><%= @current_user.username %></label><a href="/logout"><button type="button" name="button">Logout</button></a>
        </form>
    </div>
    <% end %>
    <div class="navbar">
        <a href="/">Home</a> | <a href="/p/profile">Profile</a> | <a href="/faq">FAQ</a> | <a href="/">Random</a>
    </div>
      <%= yield %>
  </body>
</html>
