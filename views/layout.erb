<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" type="text/css" href="/css/default.css">
  </head>
  <body>
    <% if flash[:notice] %>
      <div class="flash notice">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="flash alert">
        <%= flash[:alert] %>
      </div>
    <% end %>
    <% unless @current_user %>
    <div class="topblue">
      <form class="signinform" action="/sign-in" method="post">
        <label>Sign In</label>
        <input type="text" name="username" placeholder="username">
        <input type="password" name="password" placeholder="password">
        <input type="submit" >
      </form>
    </div>
    <nav>
			<ul class="navUl">
        <div>
          <% while @n < @nav.length %>
          <li> <a class ="navLink" href="<%= @nav[@n][:link] %>"><%= @nav[@n][:text] %></a></li>
          <% @n += 1 %>
          <% end %>
          <% @n = 0 %>
        </div>
			</ul>
		</nav>
    <% else %>
    <div class="topblue">
      <form class="signinform">
      <label><%= @current_user.username %></label><a href="/logout"><button type="button" name="button">Logout</button></a>
      </form>
      <img src="http://blog.visme.co/wp-content/uploads/2015/10/color1.jpg">
    </div>
    <% end %>
      <%= yield %>
  </body>
</html>
